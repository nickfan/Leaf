# 镜像标签配置
IMAGE_TAG=latest

# 服务端口配置（美团T9输入法数字：6348）
SERVER_PORT=6348

# Java运行时配置
JAVA_CMD=java

# 配置文件目录路径
CONFIG_DIR=conf/

# JVM 内存配置
JAVA_OPTS=-server -Xms2g -Xmx2g -Xmn1g -XX:MetaspaceSize=128m -XX:MaxMetaspaceSize=256m

# GC 配置
JAVA_GC_OPTS=-XX:+UseConcMarkSweepGC -XX:CMSInitiatingOccupancyFraction=70 -XX:+CMSParallelRemarkEnabled -XX:+CMSScavengeBeforeRemark -XX:+PrintGCDateStamps -XX:+PrintGCDetails -Xloggc:/app/logs/gc.log

# Leaf 服务配置
LEAF_NAME=leaf-server
LEAF_SEGMENT_ENABLE=true
LEAF_SNOWFLAKE_ENABLE=true

# 数据库配置（如果启用了 segment 模式）
LEAF_JDBC_URL=jdbc:mysql://localhost:3306/leaf
LEAF_JDBC_USERNAME=root
LEAF_JDBC_PASSWORD=password

# Zookeeper配置（如果启用了 snowflake 模式）
LEAF_SNOWFLAKE_ZK_ADDRESS=localhost:2181
LEAF_SNOWFLAKE_PORT=2181
